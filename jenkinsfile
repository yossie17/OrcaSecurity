pipeline {
    agent any 
    
    
    stages {
        stage('Build') { 
            steps {
                sh 'docker-compose -f "docker-compose" build --build-arg DATABASE_URL=env.DATABASE_URL app' 
            }
        }
       
        stage('Deploy') { 
            steps {
                sh 'echo $POSTGRES_USER > db.env && echo $POSTGRES_PASSWORD >> db.env'
                sh 'cat db.env'
                sh 'docker-compose -f "docker-compose" up -d'
            }
        }
    }
}
