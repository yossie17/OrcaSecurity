pipeline {
    agent any 
    
    
    stages {
        stage('Build') { 
            steps {
                sh 'docker-compose -f "docker-compose.yml" build --build-arg DATABASE_URL=$DATABASE_URL app' 
                sh 'echo '
            }
        }
       
        stage('Deploy') { 
            steps {
                sh 'docker-compose -f "docker-compose.yml" up -d'
            }
        }
    }
}
