version: '2'

services:
 
 app:
    build:
      context: .
      dockerfile: Dockerfile
      # args:
      #   - debug=True
    container_name: app-con
    restart: always
    ports: 
      - 5000:5000
    

 postgres:
    image: postgres:12
    container_name: postgres-con
    restart: always
    environment:
      POSTGRES_DB: app
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres

   
    ports:
      - 5432:5432
    volumes:
      - database_data_pg:/var/lib/postgresql/data


volumes:
    database_data_pg:

